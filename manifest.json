{
  "manifest_version": 3,
  "name": "SubStream: Add Subtitles to Videos",
  "description": "Enhance Your Streaming Experience with Custom Subtitles!",
  "version": "1.1",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "index.png"
  },
  "icons": {
    "16": "assets/icons/icon_16.png",
    "32": "assets/icons/icon_32.png",
    "48": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/scripts/content.js"
      ],
      "all_frames": true
    }
  ]
}